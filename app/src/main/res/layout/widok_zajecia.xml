<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/rodzajZajec"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nazwaZajec"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Laboratorium"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tydzien"
        android:layout_width="204sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nazwaZajec"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="173sp"
        android:layout_marginLeft="173sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="7sp"
        android:text="Tydzień 1/3"
        android:textAlignment="textEnd"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/godzinaZakonczenia"
        android:layout_width="85sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/godzinaRozpoczecia"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="do 13:00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/godzinaRozpoczecia"
        android:layout_width="85sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rodzajZajec"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="od 12:00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/prowadzacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sala"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99sp"
        android:layout_marginLeft="99sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="20sp"
        android:text="prowadzacy"
        android:textAlignment="textEnd"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tydzien"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="101sp"
        android:layout_marginLeft="101sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:text="sala"
        android:textAlignment="textEnd"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nazwaZajec"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0sp"
        android:layout_marginLeft="0sp"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="0sp"
        android:layout_marginRight="0sp"
        android:gravity="center"
        android:text="Zarządzanie projektami informatycznym "
        android:textSize="24sp" />
</RelativeLayout>